<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Detail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/detail_imageview"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="150dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/default_cover"/>

        <SeekBar
            android:id="@+id/detai_seekbar"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_imageview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:maxHeight="4dp"
            android:minHeight="4dp"
            android:progressDrawable="?attr/drawable_seekbar_progress"
            android:thumb="?attr/mipmap_seekbar_thumb"
            android:thumbOffset="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detai_seekbar"
            android:layout_marginTop="40dp">

            <ImageView
                android:id="@+id/detail_front"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="?attr/mipmap_front" />

            <ImageView
                android:id="@+id/detail_play"
                android:layout_width="0dp"
                android:layout_height="37dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="?attr/mipmap_play" />

            <ImageView
                android:id="@+id/detail_next"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="?attr/mipmap_next" />

        </LinearLayout>



    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>