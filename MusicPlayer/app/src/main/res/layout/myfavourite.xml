<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<include-->
        <!--android:id="@+id/favourite_head"-->
        <!--layout="@layout/title_bar" />-->


    <TextView
        android:id="@+id/favourite_tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="我的喜爱歌曲"
        android:textSize="20sp"/>

    <ListView
        android:id="@+id/favourite_lv_songs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:layout_below="@id/favourite_tv_text"></ListView>


    <LinearLayout
        android:id="@+id/favourite_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <include
            android:id="@+id/favourite_playbar"
            layout="@layout/play_bar" />
    </LinearLayout>

</RelativeLayout>
